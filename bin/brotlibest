#!/usr/bin/env sh
# This script is part of Martin V\"ath's archwrap project.
set -u
. archwrap.sh
set -f
Push -c options
Push -c files

skip_calc=false
ShortOpt() {
	shortopt=$1
	while shortopt=${shortopt#?} && [ -n "$shortopt" ]
	do	case $shortopt in
		[w])
			skip_calc=:
			havearg=:
			return;;
		[oqwS])
			havearg=:
			return;;
		esac
	done
	havearg=false
}
last=false
havearg=false
for option
do	if $last || $havearg
	then	Push files "$option"
		havearg=false
		continue
	fi
	case $option in
	-)
		Push files "$option";;
	--)
		last=:
		continue;;
	--lgwin*|--large_window*)
		Push options "$option"
		skip_calc=:
		continue;;
	--*)
		Push options "$option"
		continue;;
	-*)
		ShortOpt "$option"
		Push options "$option"
		continue;;
	esac
	Push files "$option"
done

if $skip_calc
then	if Push files
	then	eval "set -- $options -- $files"
	else	eval "set -- a $options"
		shift
	fi
	exec brotli "$@"
	exit
fi
Brotli() {
	Filesizelog 10
	if [ x"$file" = x'-' ]
	then	brotli ${1+"$@"} --large_window=$filesizelog
	else	brotli ${1+"$@"} --large_window=$filesizelog -- "$file"
	fi
}
MaxLogMemory 30
Push files || Push files '-'
eval "set -- $files"
for file
do	eval "Brotli $options" || exit
done
exit 0
